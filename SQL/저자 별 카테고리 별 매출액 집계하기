-- 코드를 입력하세요
SELECT B.AUTHOR_ID, AUTHOR_NAME, CATEGORY, SUM(C.SALES * A.PRICE)  AS TOTAL_SALES
FROM BOOK A JOIN AUTHOR B JOIN BOOK_SALES C
ON A.AUTHOR_ID = B.AUTHOR_ID
AND A.BOOK_ID = C.BOOK_ID
WHERE DATE_FORMAT(SALES_DATE, "%y%m") = "2201"
GROUP BY B.AUTHOR_ID, AUTHOR_NAME, CATEGORY
ORDER BY 1, 3 DESC;

